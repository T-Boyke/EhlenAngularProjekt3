{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-blue-900 mb-4">üåä Lehrer Dashboard</h1>
        <p class="text-xl text-gray-600">Verwalten Sie die Ozean-Datenbank f√ºr Ihre Sch√ºler.</p>
    </div>

    <!-- Action Bar -->
    <div class="flex justify-between items-center mb-8 bg-white p-4 rounded-xl shadow-md border border-blue-100">
        <div class="text-gray-700 font-semibold">
            <span class="bg-blue-100 text-blue-800 py-1 px-3 rounded-full text-sm mr-2">5 Ozeane</span>
            in der Datenbank
        </div>
        <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg shadow transition transform hover:scale-105 flex items-center gap-2">
            <span>+</span> Neuen Ozean anlegen
        </button>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

        {% for ocean in oceans %}
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition duration-300 group">
            <div class="h-48 bg-gray-200 relative overflow-hidden">
                <img src="{{ ocean.image }}" alt="{{ ocean.name }}" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-blue-800 shadow-sm">
                    ID: {{ ocean.id }}
                </div>
            </div>
            <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">{{ ocean.name }}</h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ ocean.description }}</p>

                <div class="flex gap-2 mt-4">
                    <span class="text-xs bg-blue-50 text-blue-600 px-2 py-1 rounded border border-blue-100">{{ ocean.factCount }} Fakten</span>
                    <span class="text-xs bg-purple-50 text-purple-600 px-2 py-1 rounded border border-purple-100">{{ ocean.quizCount }} Fragen</span>
                </div>

                <div class="mt-6 flex gap-3">
                    <button onclick="openEditModal('{{ ocean.id }}', '{{ ocean.name }}', '{{ ocean.description|e('js') }}')"
                            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-medium transition">
                        Bearbeiten
                    </button>
                    <form method="POST" action="/lehrer" onsubmit="return confirm('Wirklich l√∂schen?');">
                        <input type="hidden" name="action" value="delete">
                        <input type="hidden" name="id" value="{{ ocean.id }}">
                        <button type="submit" class="px-3 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg border border-red-200 transition h-full">
                            üóëÔ∏è
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-span-full text-center py-12 bg-gray-50 rounded-xl border-dashed border-2 border-gray-300">
            <p class="text-gray-500 text-lg">Noch keine Ozeane angelegt.</p>
            <button class="mt-4 text-blue-600 font-bold hover:underline">Erstelle den ersten Ozean!</button>
        </div>
        {% endfor %}

    </div>

    <!-- Edit Modal (Hidden by default) -->
    <div id="editModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden flex items-center justify-center z-50">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
            <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                <h2 class="text-2xl font-bold text-gray-800">Ozean bearbeiten</h2>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
            </div>

            <form method="POST" action="/lehrer" class="p-6 space-y-4">
                <input type="hidden" name="action" value="save">
                <input type="hidden" name="id" id="oceanId">

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                        <input type="text" name="data[name]" id="oceanName" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">ID (System)</label>
                        <input type="text" name="data[id]" id="oceanIdInput" class="w-full px-4 py-2 rounded-lg border border-gray-300 bg-gray-50" readonly>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Beschreibung</label>
                    <textarea name="data[description]" id="oceanDesc" rows="3" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 outline-none transition"></textarea>
                </div>

                <!-- Tabs for Facts/Quiz could go here -->
                <div class="bg-blue-50 p-4 rounded-lg text-sm text-blue-700">
                    Hinweis: Fakten und Quiz-Fragen k√∂nnen in der Detail-Ansicht bearbeitet werden.
                </div>

                <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-gray-100">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition">Abbrechen</button>
                    <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow transition transform hover:scale-105">Speichern</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEditModal(id, name, desc) {
        document.getElementById('editModal').classList.remove('hidden');
        document.getElementById('oceanId').value = id;
        document.getElementById('oceanIdInput').value = id;
        document.getElementById('oceanName').value = name;
        document.getElementById('oceanDesc').value = desc;
    }

    function closeModal() {
        document.getElementById('editModal').classList.add('hidden');
    }

    // Close on click outside
    document.getElementById('editModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });
</script>

<style>
    /* Custom Styles for Dashboard if Tailwind is not fully loaded via Theme */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
{% endblock %}
